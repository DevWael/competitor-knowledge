{
  "name": "merchant/competitor-knowledge",
  "description": "Competitor Analysis for WooCommerce Products",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Ahmad Wael",
      "email": "ahmad@bbioon.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "woocommerce/action-scheduler": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6",
    "squizlabs/php_codesniffer": "^3.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpstan/extension-installer": "^1.4",
    "php-stubs/woocommerce-stubs": "^10.4",
    "php-stubs/wordpress-stubs": "^6.9"
  },
  "autoload": {
    "psr-4": {
      "CompetitorKnowledge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CompetitorKnowledge\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "coverage": "phpunit --coverage-text",
    "coverage-html": "phpunit --coverage-html coverage-html",
    "lint": "phpcs",
    "fix": "phpcbf",
    "analyze": "phpstan analyse --memory-limit 2G"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}